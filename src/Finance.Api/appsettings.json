{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=dashfin;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "dashfin",
    "Audience": "dashfin",
    "SigningKey": "CHANGE_ME_DEV_ONLY",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000" ]
  },
  "AuthCookies": {
    "RefreshTokenName": "refresh_token",
    "RefreshTokenPath": "/auth",
    "RefreshTokenSameSite": "None",
    "RefreshTokenSecure": true
  },
  "FileStorage": {
    "Local": {
      "RootPath": "var/files"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
